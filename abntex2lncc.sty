% Para criar a abstração nome e sobrenome
% Usado na ficha catalográfica

\providecommand{\imprimirNomeAutor}{}
\providecommand{\imprimirUltimoSobrenome}{}

\newcommand{\nomeAutor}[2]{
	\renewcommand{\imprimirNomeAutor}{#1}
	\renewcommand{\imprimirUltimoSobrenome}{#2}
	\autor{#1{ }#2}
}

% Orientador

% Para imprimir rótulo "orientadores"
\providecommand{\imprimirOrientadoresRotulo}{Orientador{(}es{)}:}

\providecommand{\imprimirNomeOrientador}{}
\providecommand{\imprimirUltimoSobrenomeOrientador}{}

\newcommand{\nomeOrientador}[2]{
	\renewcommand{\imprimirNomeOrientador}{#1} 
	\renewcommand{\imprimirUltimoSobrenomeOrientador}{#2}
	\orientador{#1{ }#2}
}

